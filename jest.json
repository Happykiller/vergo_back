{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": "[.]spec[.]ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@src/(.*)": "<rootDir>/src/$1",
    "^@presentation/(.*)": "<rootDir>/src/presentation/$1",
    "^@usecase/(.*)": "<rootDir>/src/usecase/$1",
    "^@service/(.*)": "<rootDir>/src/service/$1"
  }
}
